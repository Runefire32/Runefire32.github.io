

<% if user_signed_in? %>
<div class="page-header">
   
  <h1 class="rainbow">Listing Users</h1>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Articles</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
            <% @users.each do |user| %>
    </thead>
    <tbody>
            <td><%= user.fist_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.articles.count %></td>
            <td><%= link_to 'Show', user_path(user) %></td>
        <td><%= link_to 'Edit', edit_user_registration_path(user) %></td>
        <td><%= link_to 'Destroy', user_registration_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
<% else %>
<h1 class="rainbow">This page is allowed for registered users only </h1>
<%= link_to 'register here' , new_user_session_path %>




<% end %>