<% if user_signed_in? %>
<div class="page-header">
  <%= link_to new_article_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Article
  <% end %>
  <h1 class="rainbow">Listing articles</h1>
  <br>
  <br>
</div>

<div class="table-responsive">
 
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>User FirstName</th>
            <th>Title</th>
            <th>Content</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
      <% @articles.each do |article| %>

    <tbody>
            <td><%= article.user.fist_name %></td>
            <td><%= article.title %></td>
            <td><%= article.content %></td>
            <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure fdp ?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
<% else %>
<br>
<br>
<br>
<br>
<h2 class="rainbow">Welcome , to see content of this website you must be <%= link_to 'registered', new_user_registration_path %></h2>
<%= link_to 'Create account', new_user_registration_path %>

<% end %>
