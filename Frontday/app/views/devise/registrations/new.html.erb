<body>
  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-xl-9 mx-auto">
        <div class="card card-signin flex-row my-5">
          <div class="card-img-left d-none d-md-flex">
             <!-- Background image for card set in CSS! -->
          </div>
          <div class="card-body">
           
            
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>


              <div class="form-label-group">
                    <%= f.input :fist_name, 
                    input_html: { autocomplete: "fist_name" }, required: true,
                    autofocus: true , 
                              class:"form-control", placeholder:"firstname" %>
                
              </div>
               <div class="form-label-group">
                    <%= f.input :last_name, 
                    input_html: { autocomplete: "last_name" }, required: true,
                    autofocus: true , 
                              class:"form-control", placeholder:"lastname" %>
                
              </div>

              <div class="form-label-group">
                <%= f.input :email, 

                required: true,
                
                input_html: { autocomplete: "email" }, id:"inputEmail", class:"form-control", placeholder:"Email address" , required: true %>
                
              </div>
              
              <hr>

              <div class="form-label-group">
              <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" }, class:"form-control", placeholder:"mot de passe" , required: true%>               
                
              </div>
              
              <div class="form-label-group">
              <%= f.input :password_confirmation,
                required: true,
                 hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" }, class:"form-control", placeholder:"Email address" , required: true %>  
                </div>
              
              <%= f.button :submit,  class:"btn btn-lg btn-primary btn-block text-uppercase" %>
             </div>
              <hr class="my-4">
              <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fab fa-google mr-2"></i> Sign up with Google</button>
              <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i class="fab fa-facebook-f mr-2"></i> Sign up with Facebook</button>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
<% end %>
<%= render "devise/shared/links" %>